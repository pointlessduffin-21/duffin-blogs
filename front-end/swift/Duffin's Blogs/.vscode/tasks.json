{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run iOS Simulator",
			"type": "shell",
			"command": "xcodebuild",
			"args": [
				"-project",
				"Duffin's Blogs.xcodeproj",
				"-scheme",
				"Duffin's Blogs",
				"-destination",
				"platform=iOS Simulator,name=iPhone 16",
				"build"
			],
			"group": "build",
			"isBackground": false,
			"problemMatcher": [
				"$gcc"
			]
		}
	]
}